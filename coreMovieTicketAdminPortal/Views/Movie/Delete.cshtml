@model coreMovieTicketAdminPortal.Models.Movie
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><b>DELETE</b></h2>
<br />
<h4>Are you sure you want to delete this?</h4>

<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">

    <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.MovieName)</b>: @Html.DisplayFor(model => model.MovieName)</li>
    <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.MovieDescription)</b>: @Html.DisplayFor(model => model.MovieDescription)</li>       
    </ul>
</div>
<br />

@using (Html.BeginForm("Delete", "Movie", FormMethod.Post))
{
    <p>
        <input type="submit" value="Delete", class="btn btn-danger" />
        <a asp-controller="Movie" asp-action="Index" class="btn btn-primary">Back To List</a>
    </p>
}
