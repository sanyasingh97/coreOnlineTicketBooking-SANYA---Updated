@model coreMovieTicketAdminPortal.Models.MovieDetail
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><b>DELETE</b></h2>
<br />
<h4>Are you sure you want to delete this?</h4>
<div class="card" style="width: 18rem;">
    <ul class="list-group list-group-flush">


        <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.Casting)</b>: @Html.DisplayFor(model => model.Casting)</li>
        <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.Producer)</b>: @Html.DisplayFor(model => model.Producer)</li>
        <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.Director)</b>: @Html.DisplayFor(model => model.Director)</li>
        <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.MovieType)</b>: @Html.DisplayFor(model => model.MovieType)</li>
        <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.MovieImage)</b>: @Html.DisplayFor(model => model.MovieImage)</li>
        <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.MovieDuration)</b>: @Html.DisplayFor(model => model.MovieDuration)</li>
        <li class="list-group-item"><b>@Html.DisplayNameFor(model => model.Price)</b>: @Html.DisplayFor(model => model.Price)</li>
    </ul>
</div>
<br />
@using (Html.BeginForm("Delete", "Movie", FormMethod.Post))
{
    <p>
        <input type="submit" value="Delete" , class="btn btn-danger" /> 
        <a asp-controller="MovieDetail" asp-action="Index" class="btn btn-primary">Back To List</a>
    </p>
}
